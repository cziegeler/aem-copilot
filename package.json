{
  "name": "aem-eds-copilot",
  "publisher": "neerajgrg93",
  "displayName": "AEM EDS Copilot",
  "description": "Github Copilot for AEM EDS",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.90.0"
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "contributes": {
    "chatParticipants": [
      {
        "id": "aem",
        "name": "aem",
        "description": "AEM Assistant to help with blocks developement",
        "isSticky": true,
        "commands": [
          {
            "name": "create",
            "description": "Given a block name, create corresponding files"
          },
          {
            "name": "info",
            "description": "Information About AEM EDS blocks"
          },
          {
            "name": "collection",
            "description": "Pull a block from aem block collection repo"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "create",
        "title": "Create EDS block"
      },
      {
        "command": "info",
        "title": "Information About AEM EDS blocks"
      },
      {
        "command": "collection",
        "title": "Pull a block from aem block collection repo"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.5.9",
    "eslint": "^7.22.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "jsdom": "^24.1.0"
  }
}
